<head>
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"></link>
    <link rel="stylesheet" href="css/home.css"></link>
</head>



    <h2>Get started with EatBeats</h2>
    <img src="https://static.pexels.com/photos/3329/food-kitchen-cutting-board-cooking.jpg" width="100%">


 <body>
    {{#username}}
        {{username}}


    <div>
        <form action="/favorite-playlists" method="get">
            <button class="btn btn-primary" type="submit" name="favorite-playlists">Favorite Playlists</button>
        </form>
    </div>

    <div>
        <form action="/my-recipes" method="get">
            <button class="btn btn-primary" type="submit" name="my-recipes">My Recipes</button>
        </form>
    </div>

    <div>
        <form action="/create-recipe" method="get">
            <button class="btn btn-primary" type="submit" name="create-recipe">Make a New Recipe</button>
        </form>
    </div>

    <div>
        <form action="/logout" method="get">
            <button class="btn btn-primary" type="submit">Logout</button>
        </form>
    </div>
    {{/username}}

    {{^username}}
    <div>
        <form action="/login" method="post">
            <input type="text" placeholder="username" name="username"/>
            <input type="password" placeholder="password" name="password"/>
            <button type="submit">Login</button>
        </form>
    </div>
    {{/username}}

    {{^username}}
        <div>
            <form>
                <a href="/create-account">Create Account</a>
            </form>
        </div>
    {{/username}}
 </body>