<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"></link>
    <link rel="stylesheet" type="text/css" href="css/create-recipe.css"></link>
</head>

<body>

<form>
    <a href="/">Home</a>
</form>

<div class="header">Create a recipe:</div>

<form class="create-recipe" action="/create-recipe" method="post">
    <div>
        Name
        <input type="text" placeholder="name" name="name"/>
    </div>

    <div>
        Season
        <select id="season" name="season">
            <option value="Spring">Spring</option>
            <option value="Summer">Summer</option>
            <option value="Fall">Fall</option>
            <option value="Winter">Winter</option>
        </select>
    </div>

    <div>
        Category
        <select id="category" name="category">
            <option value="Breakfast">Breakfast</option>
            <option value="Brunch">Brunch</option>
            <option value="Lunch">Lunch</option>
            <option value="Dinner">Dinner</option>
            <option value="Dessert">Dessert</option>
        </select>
    </div>

    <div>
        Region
        <select id="region" name="region">
            <option value="French">French</option>
            <!-- placeholder: to be extended to multiple regions in Asia -->
            <option value="Asian">Asian</option>
            <option value="Contemporary">Contemporary</option>
            <option value="Southern">Southern</option>
            <option value="Italian">Italian</option>
        </select>
    </div>

    <div>
            <div>Description</div>
            <textarea title="description" name="description" rows="5" cols="10"></textarea>
    </div>

    <div>
            <button type="submit" class="btn btn-primary">Submit Recipe</button>
    </div>
</form>

</body>