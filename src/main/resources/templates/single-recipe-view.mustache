{{recipe.name}}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"></link>
</head>

<form>
    <a href="/">Home</a>
</form>

<form action="/single-recipe-view" method="get">
    <div>
        Name
        {{recipe.name}}
    </div>

    <div>
        Season

        {{recipe.season}}
    </div>

    <div>
        Category
        {{recipe.category}}
    </div>

    <div>
        Region
        {{recipe.region}}
    </div>

    <div>
        Description
        {{recipe.description}}
    </div>

    <div>
        <button type="submit" >Submit Recipe</button>
        <input type="hidden" name="id" value="{{recipe.id}}">
    </div>


</form>