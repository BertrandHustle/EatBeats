<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"></link>
    <link rel="stylesheet" href="css/styles.css" />
</head>
<body>

{{#username}}
<div class="home-form">

    {{#thanks}}
            <div> Thanks for suggesting some songs! </div>
    {{/thanks}}

    {{#playlistSaved}}
            <div> Playlist saved! </div>
    {{/playlistSaved}}

    <h2>Get cooking with EatBeats</h2>

    <p>Hi, {{username}}</p>

    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/favorite-playlists">Favorite Playlists</a>
                    </li>
                    <li>
                        <a href="/my-recipes">My Recipes</a>
                    </li>
                    <li>
                        <a href="/create-recipe">Make a New Recipe</a>
                    </li>
                    <li>
                        <a href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{{/username}}

{{^username}}

    {{#loginFailed}}
        Login Failed! Wrong password and username combination.
    {{/loginFailed}}


    <div class="home-form">
        <h2>Get started with EatBeats</h2>

        <div class="login-form">
            <form action="/login" method="post">
                <div>
                    <input type="text" placeholder="username" name="username" class="form-control short">
                </div>
                <div>
                    <input type="password" placeholder="password" name="password" class="form-control short">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>

        <div class="create-account">
            <form>
                <a href="/create-account">Create Account</a>
            </form>
        </div>
    </div>
{{/username}}

</body>
</html>

